{
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coveragePathIgnorePatterns": [
    "node_modules/"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "jsx",
    "ts",
    "tsx",
    "node"
  ],
  "testEnvironment": "node",
  "transform": {
    "\\.(ts)$": "ts-jest"
  },
  "testMatch": [
    "**/?!(*.e2e).spec.ts"
  ],
  "globals": {
    "ts-jest": {
      "ignoreCoverageForDecorators": true,
      "ignoreCoverageForAllDecorators": true
    }
  }
}